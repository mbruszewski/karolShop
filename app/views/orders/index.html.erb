<% title "Orders" %>

<table>
  <tr>
    <th>Status</th>
    <th>User</th>
    <th>Address</th>
  </tr>
  <% for order in @orders %>
    <tr>
      <td><%= order.status %></td>
      <td><%= order.user_id %></td>
      <td><%= order.address_id %></td>
      <td><%= link_to "Show", order %></td>
      <td><%= link_to "Edit", edit_order_path(order) %></td>
      <td><%= link_to "Destroy", order, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

