<% title "Users" %>

<table>
  <tr>
    <th>Login</th>
    <th>Password</th>
    <th>Admin?</th>
  </tr>
  <% for user in @users %>
    <tr>
      <td><%= user.login %></td>
      <td><%= user.password %></td>
      <td><%= user.admin %></td>
      <td><%= link_to "Show", user %></td>
      <td><%= link_to "Edit", edit_user_path(user) %></td>
      <td><%= link_to "Destroy", user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

