<%= form_for @user do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login, "Login (e-mail)" %><br />

		<% if yield(:title) == "Edycja użytkownika" %>
 	   	<%= f.text_field :login, disabled: true %>
		<% else %>
			<%= f.text_field :login%>
		<% end %>

  </p>
  <p>
    <%= f.label :password, "Hasło" %><br />
    <%= f.password_field :password %>
  </p>
	<p>
    <%= f.label :password_confirmation, "Potwierdź hasło" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p><%= f.submit "Zatwierdź", class: "btn btn-large btn-primary" %></p>
<% end %>
