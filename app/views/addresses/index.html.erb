<% provide(:title, t("pages.user_settings.your_addresses")) %>


<div class="space_table"></div>

<div class="addresses">
  <center>
    <table>
      <tr>
        <th><%= t("address.city") %></th>
        <th><%= t("address.street") %></th>
        <th><%= t("address.post_code") %></th>
      </tr>
      <% for address in @addresses %>
        <tr>
          <td><%= address.city %></td>
          <td><%= address.street_and_number %></td>
          <td><%= address.post_code %></td>
          <td width=200>
            <%= link_to t("edit"), edit_address_path(address), class: "red_button" %>
            <%= link_to t("delete"), address, :confirm => t("confirmation"), :method => :delete, class: "red_button" %>
          </td>
        </tr>
      <% end %>
    </table>
  </center>
</div>

<div class="space_table"></div>
