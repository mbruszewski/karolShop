<div class="header">
	<div class="item">
		<%= link_to "Strona główna", root_path %>
	</div>

	<%= render "header/normal_user" %>
	<%= render "header/admin_user" %>

	<% if current_user.nil? %>
		<div class="item">
			<%= link_to "Zaloguj sie", login_path %>
		</div>
		<div class="item">
			<%= link_to "Zarejestruj sie", users_path + "/new" %>
		</div>
	<% else %>
		<div class="item">
			<%= link_to "Wyloguj sie", logout_path %>
		</div>
	<% end %>
		
</div>

