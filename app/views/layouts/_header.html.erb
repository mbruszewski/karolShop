<div class="header">
		<div class="item">
			<%= link_to "Strona główna", root_path %>
		</div>

		<%= render "header/addresses" %>
		<%= render "header/users" %>
		<%= render "header/categories" %>
		<%= render "header/products" %>


		<% if current_user.nil? %>
			<div class="item">
				<%= link_to "Zaloguj sie", login_path %>
			</div>
			<div class="item">
				<%= link_to "Zarejestruj sie", users_path + "/new" %>
			</div>
		<% else %>
			<div class="item">
				<%= link_to "Wyloguj sie", logout_path %>
			</div>
		<% end %>

		
</div>

