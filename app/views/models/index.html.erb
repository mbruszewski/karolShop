<% provide(:title, t("pages.admin_options.all_models")) %>

<div class="space_table"></div>

<div class="models">
<center>
  <table>
    <tr>
      <th><%= t("company.photo") %></th>
      <th>Nazwa producenta</th>
      <th>Nazwa modelu</th>
    </tr>
    <% for company in @companies %>
      <tr>
        <td><%= image_tag image_url(company), size: "100x100" %></td>
        <td><%= company.name %></td>
        <td>
        <% for model in company.models %>
          <div class="item">
            <%= model.name %>
            <%= link_to t("edit"), edit_model_path(model) %>
            <%= link_to t("delete"), model, confirm: t("confirmation"), method: :delete %>
          </div>
        <% end %>
        </td>
      </tr>
    <% end %>
  </table>
</center>
</div>

<div class="space_table"></div>
